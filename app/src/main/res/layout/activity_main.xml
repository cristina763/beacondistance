<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewConnectionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connection Status: Not connected"
        android:textSize="18sp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Waiting for beacon detection..."
        android:textSize="18sp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/textViewRssi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RSSI: N/A"
        android:textSize="18sp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/textViewDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Distance: N/A"
        android:textSize="18sp"
        android:padding="8dp" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Distance to Zenbo"
        android:padding="16dp"
        android:textSize="18sp" />

</LinearLayout>
